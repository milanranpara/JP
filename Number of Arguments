//Write an appliction that counts the total number of character in all of its command line argument.

class File
{
	public static void main(String[] args)
	{
		int count=0;
		int sum=0;
    
 		if(args.length>0)                                 //Here args is an attribute.
		{
			count++;
		}
		for (int i=0; i<args.length; i++)
		{
			sum=sum+args[i].length();                       //Here args is an object of string.
		}
		System.out.println("Number of arguments: "+count);
		System.out.print("Total numbers of characters in the arguments are: "+sum);
	}
}
